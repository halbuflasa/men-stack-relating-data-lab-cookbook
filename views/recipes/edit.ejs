<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/stylesheets/style.css" />
  <title>Edit <%= recipe.name %></title>
</head>
<body>
  <%- include('../partials/_navbar.ejs') %>
  <div class="new-container">
    <div class="new-form-container">
      <h1>Edit <%= recipe.name %></h1>
      <form action="/recipes/<%= recipe._id %>?_method=PUT" method="POST">
        <label for="name">Recipe Name:</label>
        <input type="text" name="name" id="name" value="<%= recipe.name %>" />

        <label for="instructions">Instructions:</label>
        <textarea id="instructions" name="instructions" rows="4" cols="50"><%= recipe.instructions %></textarea>

        <label for="ingredients">Select Ingredients:</label>
        <div>
          <% ingredients.forEach((ingredient) => { %>
            <label>
              <input
                type="checkbox"
                name="ingredients"
                value="<%= ingredient._id %>"
                <%= recipe.ingredients.some(i => i._id.equals(ingredient._id)) ? 'checked' : '' %>
              />
              <%= ingredient.name %>
            </label>
          <% }) %>
        </div>

        <button type="submit">Edit Recipe</button>
      </form>
    </div>
  </div>
</body>
</html>
